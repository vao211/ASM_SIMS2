@model SIMS_test.Models.ViewModels.Authen.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                    @if (ViewData["MessageLogin"] != null)
                    {
                        <span class="text-danger">
                            @ViewData["MessageLogin"]
                        </span>
                    }
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter Username" asp-for="Username" />
                            <label for="inputUsername">Username</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPassword" type="password" placeholder="Password" asp-for="Password" />
                            <label for="inputPassword">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>