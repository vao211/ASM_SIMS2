@model WebSIMS.Models.Entities.Courses

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container d-flex flex-column align-items-center">
    <h2>Delete Course</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show w-50" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p class="text-danger mt-3">Are you sure you want to delete this course?</p>

    <dl class="row w-50">
        <dt class="col-sm-4">Course Code</dt>
        <dd class="col-sm-8">@Model.CourseCode</dd>

        <dt class="col-sm-4">Course Name</dt>
        <dd class="col-sm-8">@Model.CourseName</dd>

        <dt class="col-sm-4">Description</dt>
        <dd class="col-sm-8">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post" class="w-50">
        <input type="hidden" asp-for="CourseID" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>