@model WebSIMS.Models.Entities.Enrollments

@{
    ViewData["Title"] = "Update Grade";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Update Grade</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Enrollment" asp-action="Index">Course Enrollment</a></li>
        <li class="breadcrumb-item active">Update Grade</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Update Grade for Student
        </div>
        <div class="card-body">
            <div class="row">
                                            <div class="col-md-6">
                                <h5>Student Information</h5>
                                <p><strong>Name:</strong> @(Model.Student?.FirstName) @(Model.Student?.LastName)</p>
                                <p><strong>Student Code:</strong> @(Model.Student?.StudentCode)</p>
                                <p><strong>Email:</strong> @(Model.Student?.Email)</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Course Information</h5>
                                <p><strong>Course Code:</strong> @(Model.Course?.CourseCode)</p>
                                <p><strong>Course Name:</strong> @(Model.Course?.CourseName)</p>
                                <p><strong>Enrollment Date:</strong> @(Model.EnrollmentDate?.ToString("dd/MM/yyyy"))</p>
                            </div>
            </div>

            <hr />

            <form asp-action="UpdateGrade" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="studentId" value="@Model.StudentID" />
                <input type="hidden" name="courseId" value="@Model.CourseID" />
                
                <div class="row">
                                                    <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="grade" class="form-label">Current Grade</label>
                                        <input type="text" class="form-control" value="@(Model.Grade ?? "No grade yet")" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="newGrade" class="form-label">New Grade</label>
                                        <input type="text" name="grade" id="newGrade" class="form-control" 
                                               placeholder="Enter grade" required />
                                        <small class="form-text text-muted"></small>
                                    </div>
                                </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Grade
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
